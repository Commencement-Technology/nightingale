{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "packages/nightingale-ansi-formatter/tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "@pob/eslint-config-typescript",
    "@pob/eslint-config-babel-node"
  ],
  "overrides": [
    {
      "files": [
        "**/*.test.ts",
        "__tests__/**/*.ts"
      ],
      "env": {
        "jest": true
      },
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true
          }
        ]
      }
    }
  ]
}
