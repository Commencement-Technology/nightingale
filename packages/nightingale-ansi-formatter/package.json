{
  "name": "nightingale-ansi-formatter",
  "version": "4.0.1",
  "description": "Nightingale ANSI formatter",
  "keywords": ["nightingale", "nightingale-formatter"],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "git@github.com:christophehurpeau/nightingale.git",
  "homepage": "https://github.com/christophehurpeau/nightingale",
  "engines": {
    "node": ">=8.3.0"
  },
  "main": "./index.js",
  "types": "./dist/index.d.ts",
  "module:node": "./dist/index-node10.es.js",
  "module:node-dev": "./dist/index-node10-dev.es.js",
  "scripts": {
    "build": "pob-build",
    "build:definitions": "tsc -p tsconfig.build.json",
    "clean": "rm -Rf docs dist test/node6 coverage",
    "generate:test-coverage": "rm -Rf docs/coverage/ ; NODE_ENV=production BABEL_ENV=test jest --coverage --coverageReporters=lcov --coverageDirectory=docs/coverage/",
    "lint": "npm run typescript-check && eslint --ext .ts src/",
    "test": "jest",
    "typescript-check": "tsc --noEmit",
    "watch": "pob-watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "jest": {
    "cacheDirectory": "./node_modules/.cache/jest",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts",
      "<rootDir>/src/**/*.test.ts"
    ],
    "collectCoverageFrom": ["src/**/*.ts"],
    "moduleFileExtensions": ["ts", "js"],
    "transform": {
      "^.+\\.ts$": "babel-jest"
    }
  },
  "dependencies": {
    "@types/ansi-styles": "^3.2.1",
    "ansi-styles": "^3.2.1",
    "nightingale-formatter": "^5.0.1",
    "nightingale-types": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@types/jest": "23.3.13",
    "@typescript-eslint/eslint-plugin": "1.2.0",
    "@typescript-eslint/parser": "1.2.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.0.0",
    "babel-preset-latest-node": "3.0.1",
    "eslint": "5.13.0",
    "eslint-config-pob": "26.0.8",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-node": "8.0.1",
    "jest": "24.0.0",
    "pob-babel": "23.6.1",
    "prettier": "1.16.3",
    "typescript": "3.3.1",
    "xunit-file": "^1.0.0"
  }
}
