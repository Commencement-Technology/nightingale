{
  "name": "nightingale",
  "private": true,
  "version": "0.0.0",
  "description": "Logger for browser and node",
  "keywords": [],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "git@github.com:christophehurpeau/nightingale.git",
  "homepage": "https://github.com/christophehurpeau/nightingale",
  "workspaces": ["packages/*"],
  "scripts": {
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "postcheckout": "yarnhook",
    "postmerge": "yarnhook",
    "postrewrite": "yarnhook",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{package.json,packages/*/package.json,,.eslintrc.json}": [
      "prettier --write",
      "git add"
    ],
    "packages/*/lib/**/*.json": ["prettier --write", "git add"],
    "packages/*/lib/**/*.js": ["eslint --fix --quiet", "git add"]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "husky": "^0.14.3",
    "lerna": "2.9.0",
    "lint-staged": "^7.0.0",
    "yarnhook": "^0.1.1"
  }
}
