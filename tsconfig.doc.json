{
  "include": ["packages/*/src/**/*.ts"],

  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true
  },

  "typedocOptions": {
    "plugin": ["@chrp/typedoc-plugin-lerna-packages"],
    "lernaExclude": [
      "packages/nightingale-console-example",
      "packages/nightingale-example"
    ],
    "readme": "README.md",
    "mode": "modules",
    "out": "docs",
    "excludePrivate": true,
    "excludeNotExported": false,
    "preserveConstEnums": true,
    "gitRevision": "master"
  },

  "exclude": [
    "**/node_modules/**",
    "**/src/**/*.test.ts",
    "**/src/**/__tests__/**"
  ]
}
