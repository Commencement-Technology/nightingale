{
  "include": ["packages/*/src/**/*.ts"],

  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true
  },

  "typedocOptions": {
    "readme": "README.md",
    "mode": "modules",
    "out": "docs",
    "excludePrivate": true,
    "gitRevision": "master"
  },

  "exclude": [
    "**/node_modules/**",
    "**/src/**/*.test.ts",
    "**/src/**/__tests__/**"
  ]
}
